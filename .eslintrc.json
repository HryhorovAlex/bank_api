{
    "env": {
        "browser": false,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "promise"
    ],
    "rules": {
        "semi": ["error", "always"],
        "promise/param-names": false,
        "no-unused-expressions": "warn",
        "no-unused-vars": "warn",
        "no-unused-labels": "warn"
    }
}
